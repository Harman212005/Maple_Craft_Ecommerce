<%= render 'layouts/nav2' %>

<div class="max-w-5xl mx-auto px-6 py-10">
  <!-- Order Header -->
  <div class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white p-6 rounded-2xl shadow-lg mb-10">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-extrabold">Order #<%= @order.id %></h1>
      <span class="px-4 py-1 rounded-full text-sm font-semibold 
        <%= @order.status == 'completed' ? 'bg-green-200 text-green-900' : 'bg-yellow-200 text-yellow-900' %>">
        <%= @order.status.titleize %>
      </span>
    </div>
    <p class="mt-2 text-sm text-indigo-100">Placed on <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
  </div>

  <!-- Order Info Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-10">
    <!-- Shipping Info -->
    <div class="bg-white p-6 rounded-xl shadow border border-gray-100">
      <h2 class="text-lg font-bold mb-4 flex items-center gap-2">üöö Shipping Information</h2>
      <ul class="space-y-2 text-gray-700">
        <li><span class="font-medium">Address:</span> <%= @order.address %></li>
        <li><span class="font-medium">City:</span> <%= @order.city %></li>
        <li><span class="font-medium">Province:</span> <%= @order.province.name %></li>
        <li><span class="font-medium">Postal Code:</span> <%= @order.postal_code %></li>
      </ul>
    </div>

    <!-- Payment Info -->
    <div class="bg-white p-6 rounded-xl shadow border border-gray-100">
      <h2 class="text-lg font-bold mb-4 flex items-center gap-2">üí≥ Payment Details</h2>
      <ul class="space-y-2 text-gray-700">
        <li><span class="font-medium">Method:</span> <%= @order.payment_method %></li>
        <li><span class="font-medium">Subtotal:</span> <%= number_to_currency(@order.subtotal) %></li>
        <li><span class="font-medium">Order Total:</span> <%= number_to_currency(@order.total_price) %></li>
      </ul>
    </div>
  </div>

  <!-- Order Items -->
  <div class="bg-white p-6 rounded-xl shadow border border-gray-100 mb-10">
    <h2 class="text-xl font-bold mb-6">üõçÔ∏è Order Items</h2>
    <div class="divide-y divide-gray-200">
      <% @order.order_items.each do |item| %>
        <div class="flex items-center py-5">
          <!-- Placeholder for product image -->
          <div class="w-16 h-16 bg-gray-200 rounded-lg flex items-center justify-center text-gray-400">
            üñºÔ∏è
          </div>
          <div class="ml-4 flex-1">
            <h3 class="text-lg font-semibold text-gray-800"><%= item.product.title %></h3>
            <p class="text-sm text-gray-500">Qty: <%= item.quantity %> √ó <%= number_to_currency(item.product_price) %></p>
          </div>
          <div class="text-right">
            <p class="text-lg font-bold text-gray-900"><%= number_to_currency(item.product_price * item.quantity) %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Order Summary -->
  <div class="bg-gray-50 p-6 rounded-xl shadow-inner border border-gray-200">
    <h3 class="text-lg font-bold mb-4">üìä Order Summary</h3>
    <div class="space-y-3 text-gray-700">
      <div class="flex justify-between">
        <span>Subtotal (<%= @order.order_items.sum(:quantity) %> items)</span>
        <span><%= number_to_currency(@order.subtotal) %></span>
      </div>

      <% if @order.gst_amount > 0 %>
        <div class="flex justify-between">
          <span>GST (<%= number_to_percentage(@order.province.gst, precision: 2) %>)</span>
          <span><%= number_to_currency(@order.gst_amount) %></span>
        </div>
      <% end %>

      <% if @order.pst_amount > 0 %>
        <div class="flex justify-between">
          <span>PST (<%= number_to_percentage(@order.province.pst, precision: 2) %>)</span>
          <span><%= number_to_currency(@order.pst_amount) %></span>
        </div>
      <% end %>

      <% if @order.hst_amount > 0 %>
        <div class="flex justify-between">
          <span>HST (<%= number_to_percentage(@order.province.hst, precision: 2) %>)</span>
          <span><%= number_to_currency(@order.hst_amount) %></span>
        </div>
      <% end %>

      <div class="flex justify-between border-t border-gray-300 pt-3 font-bold text-lg text-gray-900">
        <span>Total</span>
        <span><%= number_to_currency(@order.total_price) %></span>
      </div>
    </div>
  </div>

  <!-- Actions -->
  <div class="mt-10 flex justify-end">
    <%= link_to 'üõí Continue Shopping', products_path, 
        class: "px-6 py-3 bg-indigo-600 text-white rounded-full hover:bg-indigo-700 shadow-md transition" %>
  </div>
</div>
