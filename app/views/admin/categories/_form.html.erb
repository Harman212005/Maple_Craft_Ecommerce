

<div class="max-w-lg mx-auto mt-10 bg-white shadow-lg rounded-2xl p-6">
  <h1 class="text-2xl font-semibold text-gray-800 mb-6">
    <%= category.new_record? ? "New Category" : "Edit Category" %>
  </h1>

  <%= form_with(model: [:admin, category], local: true, class: "space-y-5") do |form| %>
    <% if category.errors.any? %>
      <div class="mb-4 p-4 bg-red-100 border border-red-300 text-red-700 rounded-lg">
        <h2 class="font-semibold">
          <%= pluralize(category.errors.count, "error") %> prevented saving:
        </h2>
        <ul class="list-disc list-inside mt-2">
          <% category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Name Field -->
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-xl shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none" %>
    </div>

    <!-- Submit Button -->
    <div>
      <%= form.submit (category.new_record? ? "Create Category" : "Update Category"),
        class: "w-full bg-indigo-600 text-white font-medium py-2 px-4 rounded-xl hover:bg-indigo-700 transition duration-200" %>
    </div>
  <% end %>
</div>
