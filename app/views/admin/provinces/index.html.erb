<!-- app/views/admin/provinces/index.html.erb -->
<div class="max-w-7xl mx-auto p-8">
  <!-- Page Title -->
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900 tracking-tight">
      üåç Province Tax Rates
    </h1>
    <span class="text-sm text-gray-500">
      Manage GST, PST, and HST for each province
    </span>
  </div>

  <!-- Table Container -->
  <div class="overflow-hidden bg-white shadow-xl rounded-2xl border border-gray-200">
    <table class="min-w-full divide-y divide-gray-200">
      <!-- Table Head -->
      <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
        <tr>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Province</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">GST (%)</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">PST (%)</th>
          <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">HST (%)</th>
          <th class="px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>

      <!-- Table Body -->
      <tbody class="divide-y divide-gray-100">
        <% @provinces.each do |province| %>
          <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4 text-sm font-medium text-gray-800"><%= province.name %></td>
            <td class="px-6 py-4 text-sm text-gray-700"><%= number_to_percentage(province.gst, precision: 2) %></td>
            <td class="px-6 py-4 text-sm text-gray-700"><%= number_to_percentage(province.pst, precision: 2) %></td>
            <td class="px-6 py-4 text-sm text-gray-700"><%= number_to_percentage(province.hst, precision: 2) %></td>
            <td class="px-6 py-4 text-center">
              <%= link_to '‚úèÔ∏è Edit', edit_admin_province_path(province),
                class: 'inline-block bg-indigo-600 hover:bg-indigo-700 text-white text-xs font-semibold px-4 py-2 rounded-lg shadow transition' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
