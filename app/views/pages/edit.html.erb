<%= render 'layouts/nav1' %>

<div class="max-w-5xl mx-auto px-6 mt-12 space-y-10">
  <% @pages.each do |page| %>
    <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl shadow-lg border border-gray-200 overflow-hidden">
      
      <!-- Header -->
      <div class="px-6 py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
        <h2 class="text-xl font-bold tracking-wide">
          <%= page.name.capitalize %> Page Settings
        </h2>
      </div>

      <!-- Form -->
      <div class="p-6">
        <%= form_with model: page, url: update_page_path(page), method: :patch, local: true, class: "space-y-6" do |form| %>
          
          <% if page.name == "about" %>
            <div>
              <%= form.label :about_us, class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= form.text_area :about_us, class: "w-full border border-gray-300 rounded-xl p-4 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition", rows: 3 %>
            </div>

            <div>
              <%= form.label :our_story, class: "block text-sm font-semibold text-gray-700 mb-2" %>
              <%= form.text_area :our_story, class: "w-full border border-gray-300 rounded-xl p-4 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition", rows: 3 %>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <%= form.label :mission, class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= form.text_area :mission, class: "w-full border border-gray-300 rounded-xl p-4 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition", rows: 2 %>
              </div>
              <div>
                <%= form.label :values, class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= form.text_area :values, class: "w-full border border-gray-300 rounded-xl p-4 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition", rows: 2 %>
              </div>
            </div>

          <% elsif page.name == "contact" %>
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <%= form.label :phone, class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= form.number_field :phone, class: "w-full border border-gray-300 rounded-xl p-3 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition" %>
              </div>

              <div>
                <%= form.label :email, class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= form.text_field :email, class: "w-full border border-gray-300 rounded-xl p-3 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition" %>
              </div>
              <div>
                <%= form.label :instagram, class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= form.text_field :instagram, class: "w-full border border-gray-300 rounded-xl p-3 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition" %>
              </div>
              <div>
                <%= form.label :address, class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= form.text_field :address, class: "w-full border border-gray-300 rounded-xl p-3 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition" %>
              </div>
            </div>
          <% end %>

          <!-- Submit -->
          <div class="pt-4">
            <%= form.submit "Save Changes to #{page.name.capitalize}", class: "w-full md:w-auto px-6 py-3 bg-indigo-600 text-white font-semibold rounded-xl shadow hover:bg-indigo-700 focus:ring-4 focus:ring-indigo-400 transition" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
