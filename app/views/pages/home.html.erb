<%= render 'layouts/nav2' %>

<!-- Maple & Craft Landing Page -->

<div class="min-h-screen bg-gradient-to-b from-yellow-50 via-yellow-100 to-yellow-50">

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-red-400 via-orange-300 to-yellow-300">
    <div class="container mx-auto px-6 py-20 flex flex-col md:flex-row items-center justify-between">
      
      <!-- Hero Text -->
      <div class="md:w-1/2 mb-10 md:mb-0 text-center md:text-left">
        <h1 class="text-5xl font-bold text-white drop-shadow-lg mb-4">Maple & Craft</h1>
        <p class="text-white text-lg mb-6 drop-shadow-md">
          Celebrate the beauty of tradition with our handcrafted products, inspired by heritage and modern design.
        </p>
        <div class="flex justify-center md:justify-start space-x-4">
          <%= link_to "Shop Now", login_path, class: "px-6 py-3 bg-white text-red-500 font-semibold rounded-full shadow-lg hover:bg-yellow-50 transition transform hover:scale-105" %>
          <%= link_to "Learn More", about_path, class: "px-6 py-3 border-2 border-white text-white font-semibold rounded-full hover:bg-white hover:text-red-500 transition transform hover:scale-105" %>
        </div>
      </div>

      <!-- Hero Decorative Box -->
      <div class="md:w-1/2 flex justify-center">
        <div class="w-64 h-64 bg-white rounded-xl shadow-2xl flex items-center justify-center text-4xl font-bold text-red-400 animate-fadeIn">
          Craft
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="container mx-auto px-6 py-20">
    <h2 class="text-4xl font-bold text-center text-red-600 mb-12">Why Choose Maple & Craft?</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">

      <div class="bg-gradient-to-tr from-yellow-100 via-orange-200 to-red-100 rounded-xl shadow-lg p-8 text-center hover:shadow-2xl transition">
        <h3 class="text-xl font-semibold text-red-500 mb-2">Authentic Handcrafted</h3>
        <p class="text-gray-700">Every product is made with care and traditional craftsmanship passed down through generations.</p>
      </div>

      <div class="bg-gradient-to-tr from-green-100 via-green-200 to-green-50 rounded-xl shadow-lg p-8 text-center hover:shadow-2xl transition">
        <h3 class="text-xl font-semibold text-green-600 mb-2">Eco-Friendly Materials</h3>
        <p class="text-gray-700">Sustainable and natural materials ensure our products are kind to the environment.</p>
      </div>

      <div class="bg-gradient-to-tr from-purple-100 via-pink-200 to-pink-50 rounded-xl shadow-lg p-8 text-center hover:shadow-2xl transition">
        <h3 class="text-xl font-semibold text-purple-600 mb-2">Unique Designs</h3>
        <p class="text-gray-700">Each item has a story, a piece of tradition, making your purchase truly one-of-a-kind.</p>
      </div>

    </div>
  </section>

  <!-- Call to Action -->
  <section class="bg-gradient-to-r from-red-400 via-orange-300 to-yellow-300 py-20">
    <div class="container mx-auto text-center px-6">
      <h2 class="text-4xl font-bold text-white mb-6">Start Your Collection Today!</h2>
      <p class="text-white text-lg mb-8">Bring the warmth of tradition into your home with Maple & Craft.</p>
      <%= link_to "Explore Products", products_path, class: "px-8 py-4 bg-white text-red-500 font-bold rounded-full shadow-lg hover:bg-yellow-50 transition transform hover:scale-105" %>
    </div>
  </section>

</div>

<style>
  @keyframes fadeIn {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  .animate-fadeIn { animation: fadeIn 1s ease-out forwards; }
</style>
