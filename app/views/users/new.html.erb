<nav class="bg-gradient-to-r from-purple-600 to-pink-500 text-white shadow-md py-4">
  <div class="container mx-auto flex justify-between items-center px-4">
    <!-- Logo / Site name -->
    <div class="text-2xl font-extrabold tracking-wide">
      <%= link_to "Maple & Craft", root_path, class: "hover:text-yellow-300 transition-colors duration-200" %>
    </div>

    <!-- Navigation Links -->
    <div class="flex items-center space-x-6 text-sm md:text-base">
      <% if user_signed_in? %>
        <span class="font-medium">Hello, <%= current_user.username %></span>
        <%= link_to "Products", products_path, class: "hover:underline hover:text-yellow-300" %>
        <%= link_to "Cart", cart_path, class: "hover:underline hover:text-yellow-300" %>
        <%= link_to "Logout", logout_path, method: :delete, data: { turbo_method: :delete }, class: "hover:underline hover:text-red-300" %>
      <% else %>
        <%= link_to "Login", login_path, class: "hover:underline hover:text-green-300" %>
        <%= link_to "Signup", signup_path, class: "hover:underline hover:text-green-300" %>
        <%= link_to "About", about_path, class: "hover:underline hover:text-green-300" %>
        <%= link_to "Home", root_path, class: "hover:underline hover:text-green-300" %>
      <% end %>
    </div>
  </div>
</nav>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-tr from-purple-100 via-pink-100 to-yellow-100">
  <div class="bg-white p-10 rounded-3xl shadow-2xl w-full max-w-md relative overflow-hidden">

    <!-- Decorative Background Shapes -->
    <div class="absolute -top-10 -left-10 w-40 h-40 bg-pink-200 rounded-full opacity-30 animate-pulse"></div>
    <div class="absolute -bottom-10 -right-10 w-40 h-40 bg-purple-200 rounded-full opacity-30 animate-pulse"></div>

    <h1 class="text-3xl font-bold text-center text-purple-700 mb-8">Create Your Account</h1>

    <%= form_with model: @user, url: signup_path, data: { turbo: false }, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-pink-400 focus:border-pink-400 transition duration-200" %>
      </div>

      <div>
        <%= f.label :username, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :username, class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-pink-400 focus:border-pink-400 transition duration-200" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-pink-400 focus:border-pink-400 transition duration-200" %>
      </div>

      <div>
        <%= f.label :province_id, "Province", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :province_id, 
                      @provinces.collect { |p| [p.name, p.id] },
                      { include_blank: "Select a province..." },
                      class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:ring-pink-400 focus:border-pink-400 transition duration-200" %>
      </div>

      <div>
        <%= f.submit "Sign Up", class: "w-full bg-gradient-to-r from-purple-500 to-pink-500 hover:from-pink-500 hover:to-purple-500 text-white font-bold py-3 rounded-xl shadow-lg transition transform hover:scale-105" %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-gray-600">
      Already have an account? 
      <%= link_to "Login", login_path, class: "text-purple-600 font-semibold hover:underline" %>
    </p>
  </div>
</div>
